<?xml version="1.0" encoding="UTF-8"?>
<models>
    <model name="TaxonomyVocabulary">
        <field name="name" type="string">
            <validation name="required" />

            <option name="scaffold.order" value="1" />
            <option name="scaffold.search" value="1" />
        </field>
        <field name="slug" type="string" unique="true">
            <validation name="required" />

            <option name="scaffold.form.omit" value="1" />
        </field>

        <format name="title">{name}</format>

        <option name="behaviour.slug.field" value="name" />
        <option name="data.list.recursive.depth" value="0" />
        <option name="data.list.order.field" value="name" />
        <option name="scaffold.expose" value="true" />
        <option name="scaffold.title" value="title.taxonomy.vocabularies" />
    </model>
    <model name="TaxonomyTerm" modelClass="ride\web\orm\taxonomy\TaxonomyTermModel" dataClass="ride\web\orm\taxonomy\TaxonomyTerm">
        <field name="name" type="string">
            <validation name="required" />

            <option name="scaffold.order" value="1" />
            <option name="scaffold.search" value="1" />
        </field>
        <field name="vocabulary" model="TaxonomyVocabulary" relation="belongsTo">
            <option name="scaffold.search" value="1" />
        </field>
        <field name="parent" model="TaxonomyTerm" relation="belongsTo" />
        <field name="slug" type="string" unique="true">
            <validation name="required" />

            <option name="scaffold.form.omit" value="1" />
        </field>

        <format name="title">{name}</format>
        <format name="teaser">{vocabulary.name}</format>

        <option name="behaviour.slug.field" value="name" />
        <option name="data.list.recursive.depth" value="0" />
        <option name="data.list.order.field" value="name" />
        <option name="rest.expose" value="true" />
        <option name="scaffold.expose" value="true" />
        <option name="scaffold.title" value="title.taxonomy.terms" />
    </model>
</models>
